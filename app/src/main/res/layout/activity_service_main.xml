<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ServiceMainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startService"
        android:textAllCaps="false"
        android:id="@+id/btn_start_service"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stopService"
        android:id="@+id/btn_stop_service"
        android:textAllCaps="false"
        android:layout_alignBottom="@+id/btn_start_service"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bindService"
        android:id="@+id/btn_bind_servce"
        android:textAllCaps="false"
        android:layout_below="@+id/btn_start_service"
        android:layout_alignRight="@+id/btn_start_service"
        android:layout_alignEnd="@+id/btn_start_service"
        android:layout_marginTop="92dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unBindServi"
        android:id="@+id/btn_unbind_serice"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/btn_bind_servce"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartForegService"
        android:textAllCaps="false"
        android:id="@+id/btn_start_foreground_service"
        android:layout_below="@+id/btn_bind_servce"
        android:layout_alignRight="@+id/btn_bind_servce"
        android:layout_alignEnd="@+id/btn_bind_servce"
        android:layout_marginTop="101dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StopForgService"
        android:id="@+id/btn_stop_foreground_service"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/btn_start_foreground_service"
        android:layout_alignRight="@+id/btn_unbind_serice"
        android:layout_alignEnd="@+id/btn_unbind_serice" />
</RelativeLayout>
